<keymap version="1" name="Doug's Emacs" parent="Emacs">
  <action id="$Copy">
    <keyboard-shortcut first-keystroke="escape" second-keystroke="w" />
  </action>
  <action id="$Cut">
    <keyboard-shortcut first-keystroke="shift delete" />
  </action>
  <action id="CompileDirty">
    <keyboard-shortcut first-keystroke="ctrl f9" />
    <keyboard-shortcut first-keystroke="ctrl c" second-keystroke="ctrl c" />
  </action>
  <action id="EditorCut">
    <keyboard-shortcut first-keystroke="shift delete" />
  </action>
  <action id="EditorNextWord">
    <keyboard-shortcut first-keystroke="ctrl right" />
    <keyboard-shortcut first-keystroke="alt f" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="ctrl f" />
    <keyboard-shortcut first-keystroke="alt right" />
  </action>
  <action id="EditorPreviousWord">
    <keyboard-shortcut first-keystroke="ctrl left" />
    <keyboard-shortcut first-keystroke="alt b" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="ctrl b" />
    <keyboard-shortcut first-keystroke="alt left" />
  </action>
  <action id="EditorScrollTop">
    <keyboard-shortcut first-keystroke="shift meta comma" />
  </action>
  <action id="EditorTextEnd">
    <keyboard-shortcut first-keystroke="ctrl end" />
    <keyboard-shortcut first-keystroke="shift alt period" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="shift greater" />
  </action>
  <action id="EditorTextStart">
    <keyboard-shortcut first-keystroke="ctrl home" />
    <keyboard-shortcut first-keystroke="shift alt comma" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="shift less" />
  </action>
  <action id="Emacs+.CapitalizeWord">
    <keyboard-shortcut first-keystroke="alt c" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="c" />
  </action>
  <action id="Emacs+.DowncaseWord">
    <keyboard-shortcut first-keystroke="alt l" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="l" />
  </action>
  <action id="Emacs+.QueryReplace">
    <keyboard-shortcut first-keystroke="shift meta 5" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="shift 5" />
  </action>
  <action id="GotoAction">
    <keyboard-shortcut first-keystroke="shift ctrl a" />
    <keyboard-shortcut first-keystroke="alt x" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="x" />
  </action>
  <action id="GotoClass">
    <keyboard-shortcut first-keystroke="shift alt g" />
    <keyboard-shortcut first-keystroke="ctrl x" second-keystroke="f" />
  </action>
  <action id="GotoDeclaration">
    <keyboard-shortcut first-keystroke="ctrl alt g" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="period" />
    <keyboard-shortcut first-keystroke="alt period" />
    <mouse-shortcut keystroke="meta button1" />
  </action>
  <action id="GotoLine">
    <keyboard-shortcut first-keystroke="alt g" second-keystroke="alt g" />
  </action>
  <action id="NextTab">
    <keyboard-shortcut first-keystroke="ctrl x" second-keystroke="n" />
  </action>
  <action id="PreviousTab">
    <keyboard-shortcut first-keystroke="ctrl x" second-keystroke="p" />
  </action>
  <action id="Replace">
    <keyboard-shortcut first-keystroke="shift alt 5" />
    <keyboard-shortcut first-keystroke="escape" second-keystroke="5" />
  </action>
  <action id="Scala.RunWorksheet">
    <keyboard-shortcut first-keystroke="ctrl alt w" />
    <keyboard-shortcut first-keystroke="ctrl c" second-keystroke="c" />
  </action>
  <action id="SwitchApply">
    <keyboard-shortcut first-keystroke="ctrl alt enter" />
  </action>
  <action id="SwitchDown">
    <keyboard-shortcut first-keystroke="ctrl alt down" />
  </action>
  <action id="SwitchLeft">
    <keyboard-shortcut first-keystroke="ctrl alt left" />
  </action>
  <action id="SwitchRight">
    <keyboard-shortcut first-keystroke="ctrl alt right" />
  </action>
  <action id="SwitchUp">
    <keyboard-shortcut first-keystroke="ctrl alt up" />
  </action>
  <action id="Tool_External Tools_Emacs">
    <keyboard-shortcut first-keystroke="ctrl c" second-keystroke="e" />
  </action>
</keymap>